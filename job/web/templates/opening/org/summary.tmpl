<div class="opening green-line-bottom">

    <h2> {title:h} </h2>
    <span> Posted by&nbsp;{createdBy:h} on {createdOn} </span>
    <span> (Location&nbsp;&dash;&nbsp;{location:h}) </span>
    <p> Active for <b> {lifeInDays} </b> more days </p>

    {if:hasSummary}
        <p id="summary-{uuid}">
            {summary:h}
            &nbsp; <a href="#" id="{uuid}" class="more-link">more&nbsp;&gt;</a>
        </p>
    
    {end:}

    <p id="description-{uuid}" class="{descriptionClass}">
        {description:h}
        {if:hasSummary}
            &nbsp; <a href="#" id="{uuid}" class="less-link">less&nbsp;&gt;</a>
        {end:}
    </p>
    
    <p> Skills:&nbsp;{skill:h} </p>
    <div class="bounty"> Reward&nbsp;{bounty:h}&nbsp;&#36;</div>
     <div class="action-links">
        <a href="/opening/edit.php?g_opening_id={uuid}"> Edit </a>
        {if:showApplication}
        &nbsp;|&nbsp;
        <a href="/application/list.php?g_opening_id={uuid}">   Applications &nbsp;({applicationCount})</a>
        {end:}
        
    </div>

</div>