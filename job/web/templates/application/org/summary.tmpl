
    <div id="application-{uuid}" class="application green-line-bottom">
        {if:header}
            <span class="header"> My Applications </span>
        {end:}

        <p> {cvName} &nbsp;({cvEmail} &nbsp; Phone &nbsp;{cvPhone}) </p>
        <p> Company: {cvCompany} &nbsp; Education : {cvEducation} &nbsp; current location: {cvLocation} </p>
        <p> Skills: &nbsp; {cvSkill} </p>

        {if:hasSummary}
            <p id="application-summary-{uuid}">
                {summary:h}
                &nbsp; <a href="#" id="{uuid}" class="application-more-link">more&nbsp;&gt;</a>
            </p>

        {end:}

        <p id="application-detail-{uuid}" class="{descriptionClass}">
            {cvDescription:h}
            {if:hasSummary}
                &nbsp; <a href="#" id="{uuid}" class="application-less-link">less&nbsp;&gt;</a>
            {end:}
        </p>
        
        <div class="action-links"> 
             <a href="#" id="{uuid}" class="application-approve-link"> Approve</a>
             &nbsp;|&nbsp;
            <a href="#" id="{uuid}" class="application-reject-link"> Reject</a>
        </div>
        
    </div>

